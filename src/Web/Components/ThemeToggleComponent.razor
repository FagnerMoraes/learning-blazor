@inherits LocalizableComponentBase<ThemeToggleComponent>

<span class="navbar-item">
    <button class="button is-light level-item"
        @onclick=@ToggleTheme>
        <span class="icon">
            <i class="fas fa-@(_toggleClass)"></i>
        </span>
        <span>@(Localizer[IsLightTheme ? "Light" : "Dark"])</span>
    </button>
</span>

@code {
    private string _toggleClass => IsLightTheme ? "moon" : "sun";

    [Parameter]
    public bool IsLightTheme { get; set; } = true;

    private void ToggleTheme() => IsLightTheme = !IsLightTheme;
}

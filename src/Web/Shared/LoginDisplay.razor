@inherits LocalizableComponentBase<LoginDisplay>
@inject SignOutSessionStateManager SignOutManager

<span class="navbar-item">
    <AuthorizeView>
        <Authorizing>
            <button class="button is-rounded is-loading level-item" disabled>
                @localize["LoggingIn"]
            </button>
        </Authorizing>
        <Authorized>
            <button class="button is-rounded level-item has-tooltip-right has-tooltip-info"
                data-tooltip=@(context.User?.Identity?.Name) @onclick="OnLogOut">
                <span class="icon">
                    <i class="fas fa-sign-out-alt"></i>
                </span>
                <span>@localize["LogOut"]</span>
            </button>
        </Authorized>
        <NotAuthorized>
            <button class="button is-rounded level-item" @onclick="OnLogIn">
                <span class="icon">
                    <i class="fas fa-sign-in-alt"></i>
                </span>
                <span>@localize["LogIn"]</span>
            </button>
        </NotAuthorized>
    </AuthorizeView>
</span>

@code {
    void OnLogIn(MouseEventArgs args) =>
        Navigation.NavigateTo("authentication/login", true);

    async Task OnLogOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}

@inherits LocalizableComponentBase<NotFoundPage>

<PageTitle>
	@localize["NotFound"]
</PageTitle>

<div class="container is-fluid">
    <h1 class="is-size-2 has-text-danger-dark has-background-warning box">@localize["NotFound"]</h1>
    <span class="shrugging is-size-7-rem" title="#IncludeEveryone"></span>
    <p class="lead is-size-3 pb-4">@localize["NotSureWhatYouAreLookingFor"]</p>
    <button class="button is-rounded is-primary is-large" @onclick="GoHome">
        <span class="icon">
            <i class="fas fa-home" aria-hidden="true"></i>
        </span>
        <span>
            @localize["Home"]
        </span>
    </button>
</div>

@code {
    void GoHome() => Navigation.NavigateTo("/");
}

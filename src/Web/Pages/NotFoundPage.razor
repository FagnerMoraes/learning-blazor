@inject NavigationManager Navigation

<div class="container is-fluid">
    <h1 class="is-size-2">404 - page not found</h1>
    <p class="lead">Not sure what you're looking for, but it's not here...</p>
    <button class="button is-rounded is-large" @onclick="GoHome">
        <span class="icon">
            <i class="fas fa-home" aria-hidden="true"></i>
        </span>
        <span>
            Home
        </span>
    </button>
</div>

@code {
    void GoHome() => Navigation.NavigateTo("/");
}
